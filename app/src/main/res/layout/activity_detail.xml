<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageViewCoverDet"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/book"
        android:adjustViewBounds="true"
        android:contentDescription="Cover"/>
    <TextView
        android:id="@+id/textViewTitleDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title Place Holder"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:lines="2"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textViewAuthorDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Author Place Holder"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:lines="1"
        />
    <TextView
        android:id="@+id/textViewDescriptionDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Author Place Holder"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:lines="1"
        />
    <TextView
        android:id="@+id/textViewPageCountDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Author Place Holder"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:lines="1"
        />
</LinearLayout>